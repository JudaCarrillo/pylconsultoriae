---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'P&L Consultoría Estratégica',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { variant: 'primary', text: 'Contáctanos', href: '/contact' },
      { text: 'Sobre Nosotros', href: '/about' },
    ]}
    image={{ src: '~/assets/images/default.png', alt: 'Reference Image P&L' }}
  >
    <Fragment slot="title">P&L Consultoría Estratégica</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">P&L</span> es una consultora de procesos e implementación de ERP, ayudando a compañías
        y partners de Microsoft de Latinoamérica, Centroamérica y España.
      </span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Construyendo Éxitos Juntos"
    subtitle="Mezclamos experiencia con innovación, aplicando tanto metodologías tradicionales como marcos ágiles. Especialistas en implementar Microsoft Dynamics 365 Business Central SaaS y versiones anteriores para potenciar tu negocio."
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Nuestra Experiencia"
    title="Trayecto en la consultoría"
    items={[
      { title: 'Addvantit - Business Evolution' },
      { title: 'Dima' },
      { title: 'Click 2 Actions' },
      { title: 'Professional Answer' },
      { title: 'Mekano' },
      { title: 'WAU Technologies' },
